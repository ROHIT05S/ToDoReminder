<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_background_for_alert"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/cross_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_close_icon"/>
    <EditText
        android:id="@+id/ed_text_todo_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Heading (Upto 20 characters)"
        android:maxLines="2"
        android:maxLength="20"
        android:layout_marginTop="10dp"
        android:gravity="center"/>
    <EditText
        android:id="@+id/ed_text_todo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description (Upto 250 characters)"
        android:maxLines="4"
        android:maxLength="250"
        android:layout_marginTop="10dp"
        android:gravity="center"/>
    <CheckBox
        android:id="@+id/remind_me_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:text="Remind Me"/>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

</LinearLayout>
</layout>